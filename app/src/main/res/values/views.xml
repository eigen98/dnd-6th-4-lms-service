<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 홈 화면의 서브 타이틀 텍스트뷰 스타일 -->
    <style name="homeSubTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/richBlack</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!-- 홈 화면의 서브 타이틀 텍스트뷰 스타일 -->
    <style name="makeClassSubTitleTextView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@color/richBlack</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginTop">16dp</item>
    </style>

    <!-- 툴바 스타일 -->
    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextAppearance">@style/ToolbarTitleStyle.Black</item>
    </style>

    <!-- Toolbar의 타이틀 텍스트 스타일-->
    <style name="ToolbarTitleStyle.Black" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/richBlack</item> <!-- Toolbar의 타이틀 텍스트 색상-->
        <item name="android:textSize">16sp</item> <!-- Toolbar의 타이틀 텍스트 사이즈-->
    </style>

    <!-- 급여 지급 날짜 라디오 버튼 -->
    <style name="SalaryDateRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/btn_salary_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#707070</item>
    </style>

    <!-- 툴팁 텍스트 스타일 -->
    <style name="TooltipTextAppearance">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">11sp</item>
        <item name="lineHeight">17dp</item>
    </style>

    <!-- Round BottomSheetDialog -->
    <style name="RoundBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundModalStyle</item>
    </style>
    <style name="RoundModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_round_bottom_sheet_dialog</item>
    </style>

    <!-- Edged BottomSheetDialog -->
    <style name="EdgedBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/EdgedModalStyle</item>
    </style>
    <style name="EdgedModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_edged_bottom_sheet_dialog</item>
    </style>

    <!-- Calendar Activity의 TabItem -->
    <style name="tabTextStyle" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Calendar의 날짜 텍스트 스타일 -->
    <style name="calendarDateTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/color_calendar_day</item>
        <item name="fontFamily">@font/spoqa_regular</item>
    </style>

    <!-- Calendar의 헤더 텍스트 스타일 -->
    <style name="calendarHeaderTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/grayAA</item>
        <item name="fontFamily">@font/spoqa_regular</item>
    </style>

</resources>