<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="5dp"
    android:background="@color/white"
    app:cardElevation="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="14dp"
        android:background="@drawable/bg_item_calendar"
        android:paddingVertical="16dp">


        <TextView
            android:id="@+id/student_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/richBlack"
            android:textSize="16sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="백지성/고3" />


        <ImageView
            android:id="@+id/date_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_date"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/student_text_view"
            app:tint="#A6A6A6" />

        <TextView
            android:id="@+id/date_time_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="#707070"
            android:textSize="12dp"
            app:layout_constraintTop_toTopOf="@+id/date_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/date_image_view"
            app:layout_constraintLeft_toRightOf="@+id/date_image_view"
            tools:text="2022년 1월 29일 토요일 | 10시 30분 am" />


        <ImageView
            android:id="@+id/class_round_image_view"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="9dp"
            android:src="@drawable/ic_round"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/date_image_view"
            app:tint="#A6A6A6" />

        <TextView
            android:id="@+id/class_round_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:textColor="#707070"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@+id/class_round_image_view"
            app:layout_constraintBottom_toBottomOf="@+id/class_round_image_view"
            app:layout_constraintLeft_toRightOf="@+id/class_round_image_view"
            tools:text="7회차" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>